---
import Section from "./Section.astro";
---

<Section
  title="Accessories"
  color="black"
  id="powerwall"
>
    <div 
        slot="footer" 
        class="gap-x-6 flex justify-center mx-auto ">

        <a
            class="bg-black text-sm rounded font-medium px-20 py-2 transition-colors hover:bg-white hover:text-black inline-flex justify-center items-center text-white"
            href="#"
        >
           Shop Now
        </a> 
    </div>

    <img
        slot="background"
        alt="Accesories"
        class="h-full w-full object-cover object-center bg-image"
        src="accesories.avif"
        id="bg-image-accessories"
    />    
  
</Section>

<script>
    function isEdge() {
      if (
        navigator.userAgent.indexOf("Edge") > -1 ||
        navigator.userAgent.indexOf("Edg") > -1
      ) {
        return true;
      } else {
        return false;
      }
    }
  
    var imageElement = document.querySelector("#bg-image-accessories") as HTMLImageElement;
  
    if (isEdge()) {
      imageElement.src = "accessories.webp";
    } else {
      imageElement.src = "accessories.avif";
    }
  </script>