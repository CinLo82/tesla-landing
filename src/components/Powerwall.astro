---
import Section from "./Section.astro";
---

<Section
  title="Powerwall Y Energia Solar"
  subtitle="Energía para Todos"
  color="black"
  id="powerwall"
>
    <div 
        slot="footer" 
        class="gap-x-6 flex justify-center mx-auto">
        <a
            class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
            href="#"
        >
            Ordenar Powerwall
        </a>
        <a
            class="bg-white text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
            href="#"
        >
            Ordenar Energía Solar
        </a>
    </div>
        
    <img
        slot="background"
        alt="solar y powerwall"
        class="h-full w-full object-cover object-center bg-image"
        src="powerwall.avif"
        id="bg-image-powerwall"
    />
</Section>

<script>
    function isEdge() {
      if (
        navigator.userAgent.indexOf("Edge") > -1 ||
        navigator.userAgent.indexOf("Edg") > -1
      ) {
        return true;
      } else {
        return false;
      }
    }
  
    var imageElement = document.querySelector("#bg-image-powerwall") as HTMLImageElement;
  
    if (isEdge()) {
      imageElement.src = "powerwall.webp";
    } else {
      imageElement.src = "powerwall.avif";
    }
  </script>